<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wheel_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x30"
            android:text="取消"
            android:gravity="center"
            android:paddingRight="@dimen/x30"
            />

        <TextView
            android:id="@+id/tv_wheel_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/tv_wheel_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x30"
            android:text="确定"
            android:gravity="center"
            android:paddingRight="@dimen/x30"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x400"
        android:orientation="horizontal"
        >

        <com.yusq.videodemo.test.wheelpicker.WheelPickerView
            android:id="@+id/wheel_picker_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:awv_textsize="20"
            app:awv_itemsVisibleCount="7"
            android:background="@color/white"
            />

        <com.yusq.videodemo.test.wheelpicker.WheelPickerView
            android:id="@+id/wheel_picker_center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:awv_textsize="20"
            app:awv_itemsVisibleCount="7"
            android:background="@color/white"
            />


        <com.yusq.videodemo.test.wheelpicker.WheelPickerView
            android:id="@+id/wheel_picker_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:awv_textsize="20"
            app:awv_itemsVisibleCount="7"
            android:background="@color/white"
            />

    </LinearLayout>

</LinearLayout>